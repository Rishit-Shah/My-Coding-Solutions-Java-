class Solution {
    public int countGoodSubstrings(String s) {
        int count=0;
        for(int i=0;i<=s.length()-3;i++){
            Set<Character> sameset= new HashSet<>();
            for(int j=i;j<i+3;j++){
                sameset.add(s.charAt(j));
            }
            if(sameset.size()==3){
                count++;
            }
        }
        return count;
    }
}
