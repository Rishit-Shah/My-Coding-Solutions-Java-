class Solution {
    public int[] asteroidCollision(int[] asteroids) {
        Stack<Integer> stack = new Stack<>();
        int difference;
        boolean destroy;

        for (int asteroid : asteroids) {
            destroy = false;
            if (asteroid > 0) {
                stack.push(asteroid);
            } else {
                while (!stack.isEmpty() && stack.peek() > 0) {
                    difference = stack.peek() + asteroid;
                    if (difference == 0) {
                        stack.pop();
                        destroy = true;
                        break;
                    } else if (difference < 0) {
                        stack.pop();
                    } else {
                        destroy = true;
                        break;
                    }
                }
                if (!destroy) {
                    stack.push(asteroid);
                }
            }
        }
        int[] result = new int[stack.size()];
        for (int i = stack.size() - 1; i >= 0; i--) {
            result[i] = stack.pop();
        }

        return result;
    }

   
}
