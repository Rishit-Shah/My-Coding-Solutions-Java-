/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public List<Integer> preorderTraversal(TreeNode root) {
        List<Integer> finaltree= new ArrayList<>();
        preorder(root, finaltree);
        return finaltree;
        
    }

    public void preorder(TreeNode node, List<Integer> finalttree){
         if(node==null){
            return;

        }

        finalttree.add(node.val);
        preorder(node.left, finalttree);
        preorder(node.right, finalttree);


    }
}
